import { useMemo, useState } from "react";
import { Button } from "@/components/ui/button";
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from "@/components/ui/card";
import { Textarea } from "@/components/ui/textarea";
import { Input } from "@/components/ui/input";
import { Badge } from "@/components/ui/badge";
import { GeminiLogo } from "@/components/ui/gemini-logo";
import { Camera, Image as ImageIcon, Send, Sparkles, Bot, Loader2, Leaf, AlertTriangle } from "lucide-react";
import { Input } from "@/components/ui/input";
import { Badge } from "@/components/ui/badge";
import { GeminiLogo } from "@/components/ui/gemini-logo";
import { Camera, Image as ImageIcon, Send, Sparkles, Bot, Loader2, Leaf, AlertTriangle } from "lucide-react";

interface AnalysisResult {
  diagnosis: string;
  confidence: number;
  causes: string[];
  treatments: string[];
  nextActions: string[];
}

export function AIAssistant() {
  const [file, setFile] = useState<File | null>(null);
  const [preview, setPreview] = useState<string | null>(null);
  const [prompt, setPrompt] = useState("");
  const [loading, setLoading] = useState(false);
  const [result, setResult] = useState<AnalysisResult | null>(null);

  const handleFile = (f: File | null) => {
    setFile(f);
    if (f) {
      const url = URL.createObjectURL(f);
      setPreview(url);
    } else {
      setPreview(null);
    }
  };

  const canAnalyze = useMemo(() => !!file || prompt.trim().length > 5, [file, prompt]);

  const analyze = () => {
    if (!canAnalyze) return;
    setLoading(true);
    setResult(null);
    setTimeout(() => {
      setResult({
        diagnosis: "Nutrient Deficiency (Likely Potassium)",
        confidence: 0.87,
        causes: [
          "Irregular fertilization schedule",
          "Soil potassium lockout due to pH imbalance",
          "Overwatering reducing nutrient uptake",
        ],
        treatments: [
          "Apply a balanced organic fertilizer (NPK 5-5-5) with added potassium",
          "Adjust soil pH to 6.0 – 6.8 using compost or peat moss",
          "Adopt consistent deep-watering routine (every 3–4 days)",
        ],
        nextActions: [
          "Reassess leaf color in 5–7 days",
          "Log fertilizer application in Care History",
          "Enable adaptive reminders for watering",
        ],
      });
      setLoading(false);
    }, 900);
  };

  return (
    <section id="ai" className="py-16 lg:py-24 bg-background">
      <div className="container mx-auto px-4 sm:px-6 lg:px-8">
        {/* Header */}
        <div className="text-center space-y-3 mb-10 animate-fade-in">
          <div className="inline-flex items-center gap-2 bg-green-50 border border-green-200 px-4 py-2 rounded-full text-sm font-medium">
            <Sparkles className="w-4 h-4 text-green-600" />
            <span className="text-green-700 font-semibold">Live AI Assistant</span>
          </div>
          <h2 className="text-3xl lg:text-5xl font-bold text-foreground">
            Diagnose • Plan • Grow
          </h2>
          <p className="text-muted-foreground max-w-2xl mx-auto">
            Upload a plant photo or describe the issue. AgroTrack’s AI provides instant diagnosis, care plans, and reminders.
          </p>
          <p className="text-xs text-muted-foreground">Powered by Gemini — demo simulation</p>
        </div>

        <div className="grid grid-cols-1 lg:grid-cols-2 gap-8">
          {/* Input Panel */}
          <Card className="hover-scale border-border/60">
            <CardHeader>
              <CardTitle className="flex items-center gap-2">
                <Camera className="w-5 h-5 text-primary" />
                Plant Diagnosis
              </CardTitle>
              <CardDescription>
                Add a photo and describe the symptoms. Get AI diagnosis and actionable steps in seconds.
              </CardDescription>
            </CardHeader>
            <CardContent className="space-y-4">
              {/* Upload */}
              <label
                htmlFor="plant-photo"
                className="flex items-center justify-center w-full h-48 rounded-xl border-2 border-dashed border-border/70 bg-secondary/30 hover:bg-secondary/40 cursor-pointer transition-colors"
              >
                {!preview ? (
                  <div className="flex flex-col items-center text-muted-foreground">
                    <ImageIcon className="w-8 h-8 mb-2" />
                    <span className="text-sm font-medium">Drop image or click to upload</span>
                    <span className="text-xs">JPG, PNG up to 5MB</span>
                  </div>
                ) : (
                  <div className="relative w-full h-full">
                    <img src={preview} alt="Plant preview" className="w-full h-full object-cover rounded-xl" />
                    <button
                      type="button"
                      onClick={() => handleFile(null)}
                      className="absolute top-2 right-2 bg-background/80 backdrop-blur-sm text-foreground text-xs px-2 py-1 rounded-md border border-border/60"
                    >
                      Remove
                    </button>
                  </div>
                )}
              </label>
              <input
                id="plant-photo"
                type="file"
                accept="image/*"
                className="hidden"
                onChange={(e) => handleFile(e.target.files?.[0] || null)}
              />

              {/* Prompt */}
              <Textarea
                value={prompt}
                onChange={(e) => setPrompt(e.target.value)}
                placeholder="Describe symptoms (e.g., yellowing leaves, white spots, drooping)"
                className="min-h-[110px]"
              />

              <div className="flex flex-wrap gap-2">
                {['Yellow leaves', 'White spots', 'Wilting', 'Leaf curl'].map((t) => (
                  <Badge
                    key={t}
                    variant="secondary"
                    className="cursor-pointer"
                    onClick={() => setPrompt((p) => (p ? `${p} ${t}` : t))}
                  >
                    {t}
                  </Badge>
                ))}
              </div>

              <div className="flex items-center gap-3 pt-2">
                <Button onClick={analyze} disabled={!canAnalyze || loading} variant="vibrant" className="group">
                  {loading ? (
                    <>
                      <Loader2 className="w-4 h-4 mr-2 animate-spin" />
                      Analyzing...
                    </>
                  ) : (
                    <>
                      <Send className="w-4 h-4 mr-2" /> Analyze
                    </>
                  )}
                </Button>
                <Button variant="outline" disabled={loading}>
                  <Leaf className="w-4 h-4 mr-2" /> Suggest Plants
                </Button>
                <Button variant="ghost" disabled={loading}>
                  <Bot className="w-4 h-4 mr-2" /> Care Plan
                </Button>
              </div>
            </CardContent>
          </Card>

          {/* Output Panel */}
          <Card className="border-border/60">
            <CardHeader>
              <CardTitle className="flex items-center gap-2">
                <Bot className="w-5 h-5 text-accent" />
                AI Results
              </CardTitle>
              <CardDescription>
                Real-time insights appear here. Results update as you tweak inputs.
              </CardDescription>
            </CardHeader>
            <CardContent>
              {!result && !loading && (
                <div className="text-center text-muted-foreground py-12">
                  <div className="w-12 h-12 bg-primary/10 rounded-xl flex items-center justify-center mx-auto mb-3">
                    <Sparkles className="w-6 h-6 text-primary" />
                  </div>
                  <p>Ready when you are. Upload a photo or describe the issue to begin.</p>
                </div>
              )}

              {loading && (
                <div className="flex items-center gap-3 text-muted-foreground py-12">
                  <Loader2 className="w-5 h-5 animate-spin" />
                  Analyzing your plant...
                </div>
              )}

              {result && (
                <div className="space-y-6 animate-enter">
                  <div className="flex items-center gap-3">
                    <Badge variant="secondary" className="bg-success/10 text-success-foreground">
                      {Math.round(result.confidence * 100)}% confidence
                    </Badge>
                    <a href="#" className="story-link text-sm text-primary">
                      Learn how we diagnose
                    </a>
                  </div>

                  <div>
                    <h3 className="text-xl font-semibold text-foreground mb-2">{result.diagnosis}</h3>
                    <p className="text-sm text-muted-foreground">Likely issue identified based on symptoms and visual cues.</p>
                  </div>

                  <div className="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                      <h4 className="font-semibold text-foreground mb-2 flex items-center gap-2">
                        <AlertTriangle className="w-4 h-4 text-primary" /> Potential Causes
                      </h4>
                      <ul className="space-y-2 text-sm text-muted-foreground">
                        {result.causes.map((c, i) => (
                          <li key={i} className="flex gap-2">
                            <span>•</span> <span>{c}</span>
                          </li>
                        ))}
                      </ul>
                    </div>
                    <div>
                      <h4 className="font-semibold text-foreground mb-2 flex items-center gap-2">
                        <Leaf className="w-4 h-4 text-success" /> Recommended Treatments
                      </h4>
                      <ul className="space-y-2 text-sm text-muted-foreground">
                        {result.treatments.map((t, i) => (
                          <li key={i} className="flex gap-2">
                            <span>•</span> <span>{t}</span>
                          </li>
                        ))}
                      </ul>
                    </div>
                  </div>

                  <div>
                    <h4 className="font-semibold text-foreground mb-2">Next Actions</h4>
                    <div className="flex flex-wrap gap-2">
                      {result.nextActions.map((a, i) => (
                        <Badge key={i} variant="secondary" className="hover-scale">
                          {a}
                        </Badge>
                      ))}
                    </div>
                  </div>
                </div>
              )}
            </CardContent>
          </Card>
        </div>
      </div>
    </section>
  );
}
