{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "rootDir": ".",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": false,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strictFunctionTypes": false
  },
  "include": ["src", "tests"],
  "exclude": ["src/**/*.example.ts"]
}
